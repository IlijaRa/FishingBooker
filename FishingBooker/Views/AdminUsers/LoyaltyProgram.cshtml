@model FishingBooker.Models.LoyaltyProgramViewModel

@{
    ViewBag.Title = "LoyaltyProgram";
    Layout = null;
    int row_counter = 1;
    //if (User.IsInRole("Admin"))
    //{
    //    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    //}
    //else if (User.IsInRole("HeadAdmin"))
    //{
