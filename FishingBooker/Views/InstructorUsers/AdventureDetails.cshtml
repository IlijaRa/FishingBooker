@model FishingBooker.Models.AdventureViewModel

@{
    ViewBag.Title = "AdventureDetails";
    if (User.IsInRole("ValidFishingInstructor"))
    {
        Layout = "~/Views/Shared/_LayoutInstructor.cshtml";
    }
    else if (User.IsInRole("ValidCottageOwner"))
